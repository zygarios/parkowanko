{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": ["favicon.ico", "index.html", "manifest.webmanifest", "*.css", "*.js"]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/**/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)",
          "/osm_bright.json"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "google-fonts",
      "urls": ["https://fonts.googleapis.com/**", "https://fonts.gstatic.com/**"],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 20,
        "maxAge": "365d"
      }
    },
    {
      "name": "api-cache",
      "urls": ["https://parkowanko-api.onrender.com/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1h",
        "timeout": "10s"
      }
    }
  ]
}
