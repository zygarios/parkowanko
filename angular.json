{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "parkowanko": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "none",
          "changeDetection": "OnPush",
          "skipTests": true
        },
        "@schematics/angular:service": { "skipTests": true },
        "@schematics/angular:pipe": { "skipTests": true },
        "@schematics/angular:directive": { "skipTests": true },
        "@schematics/angular:guard": { "skipTests": true }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "css",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "node_modules/@angular/material/_index.scss",
              "src/styles.css"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json"
            },
            "preproduction": {
              "budgets": [],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json",
              "baseHref": "/parkowanko/",
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.preproduction.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "preproduction"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": { "buildTarget": ":build:development" }
        },
        "deploy": {
          "builder": "angular-cli-ghpages:deploy",
          "configurations": {},
          "options": {}
        }
      }
    }
  },
  "cli": { "analytics": true }
}
